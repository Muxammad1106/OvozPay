# OvozPay Environment Configuration
# Copy this file to .env and fill in your values

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,ovozpay.uz,www.ovozpay.uz

# Database Settings
POSTGRES_USER=ovozpay
POSTGRES_PASSWORD=supersecurepass123
POSTGRES_DB=ovozpay_db
DATABASE_URL=postgresql://ovozpay:supersecurepass123@postgres:5432/ovozpay_db

# Redis Settings
REDIS_PASSWORD=redispass123
REDIS_URL=redis://:redispass123@redis:6379/0

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# AI Services URLs (internal Docker network)
OCR_SERVICE_URL=http://tesseract_ocr:8001
WHISPER_SERVICE_URL=http://whisper_voice:8002

# Celery Settings
CELERY_BROKER_URL=redis://:redispass123@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redispass123@redis:6379/0

# Flower Monitoring
FLOWER_USER=admin
FLOWER_PASSWORD=admin123

# Email Settings (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# SSL Certificate Email
SSL_EMAIL=your-email@domain.com

# File Storage
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles

# Logging
LOG_LEVEL=INFO

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# API Rate Limiting
RATE_LIMIT_ENABLE=True
RATE_LIMIT_PER_HOUR=1000

# AI Model Settings
TESSERACT_LANGUAGES=rus+eng+uzb+uzb_cyrl
WHISPER_MODEL=base
WHISPER_DEVICE=cpu

# Backup Settings (optional)
BACKUP_ENABLED=False
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Monitoring
SENTRY_DSN=
MONITORING_ENABLED=False 